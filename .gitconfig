[user]
    name = Hisashi HATAKEYAMA
    email = me@hatak.jp
[core]
    pager = lv -c
    quotepath = false
    precomposeunicode = true
[color]
    ui = auto
[alias]
    ci = commit
    st = status -sb
    co = checkout
    df = diff
    br = branch
    l  = log --pretty=full
    ol = log --oneline
[diff "cartonlock"]
    textconv = "perl -MJSON -0e \"\\$m = decode_json(<>)->{modules}; print qq(\\$_~\\$m->{\\$_}->{version}\\n) for sort keys %\\$m\""
[github]
    user = hatak
